<UserControl x:Class="Luna.GUI.UserControls.TimeSpanEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:inf="http://www.grandsys.com/luna"
    xmlns:local="clr-namespace:Luna.GUI.UserControls" Margin="0 3">
    <Grid x:Name="panel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <ContentControl Content="{Binding Header}" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <inf:NumericUpDown Change="60" Minimum="{Binding Minimum,Mode=TwoWay}" x:Name="hourNumeric" 
                               Maximum="{Binding Maximum,Mode=TwoWay}"
                               StringFormat="{}{0: hh 時}" BorderThickness="0"                           
                          Value="{Binding Value,Mode=TwoWay}"/>
            <inf:NumericUpDown Change="5" x:Name="minNumeric" 
                               Maximum="{Binding Maximum,Mode=TwoWay}"
                               Minimum="{Binding Minimum,Mode=TwoWay}"
                               StringFormat="{}{0: mm 分}"  BorderThickness="0"
                          Value="{Binding Value,Mode=TwoWay}"/>
        </StackPanel>
       </Grid>
</UserControl>
