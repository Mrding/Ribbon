<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:domain="http://www.grandsys.com/luna/domain">   
    
    <HierarchicalDataTemplate x:Key="ReadOnlyOrgTree" 
                              ItemsSource="{Binding Path=Children}" 
                              DataType="{x:Type domain:Organization}">
        <Border x:Name="border" Background="#00FFFFFF"
                        BorderBrush="#00FFFFFF" BorderThickness="1,1,1,1" CornerRadius="1,10,1,10" Padding="2,1,5,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Grid.Column="0" x:Name="treeLab" Text="{Binding Path=Name}" Margin="0,0,3,0" />
            </StackPanel>
        </Border>
    </HierarchicalDataTemplate>

    <HierarchicalDataTemplate x:Key="CheckableCompareToEntity" 
                               ItemsSource="{Binding Path=Children}"
                               DataType="{x:Type domain:ComparableOrganization}">
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding IsSelected}"/>
            <TextBlock Text="{Binding Path=Entity.Name}" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        </StackPanel>
    </HierarchicalDataTemplate>
</ResourceDictionary>