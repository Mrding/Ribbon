<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Luna.Infrastructure.Domain" namespace="Luna.Infrastructure.Domain">
  <class name ="Organization" dynamic-update="true">
    <id name="Id" column="OrganizationId">
      <generator class="guid.comb"/>
    </id>
    <property name="Name"/>
    
    <many-to-one name="Parent" class="Organization" column="ParentId" foreign-key="FK_Organization_Parent"/>
    
    <set name="Children" collection-type="uNhAddIns.WPF.Collections.Types.ObservableSetType`1[Luna.Common.Interfaces.IHierarchical,Luna.Common], uNhAddIns.WPF">
      <key column="ParentId" foreign-key="FK_Children_Organization"/>
      <one-to-many class="Organization"/>
    </set>

    <many-to-one name="LaborRule" class="LaborRule"  foreign-key="FK_Organization_LaborRule"/>
    
  </class>
</hibernate-mapping>