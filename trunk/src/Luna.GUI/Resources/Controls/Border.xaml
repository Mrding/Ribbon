<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:themes="http://schemas.actiprosoftware.com/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="FrameworkElement.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style x:Key="VisibleBorder" TargetType="{x:Type Border}" BasedOn="{StaticResource VisibleElement}"/>

    <Style x:Key="SeatBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Background" Value="Lavender"/>
        <Setter Property="Margin" Value="1.5"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="CollapsibleTopPanel" TargetType="{x:Type Border}" BasedOn="{StaticResource VisibleBorder}">
        <Setter Property="Background" Value="#FFFFE598"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
</ResourceDictionary>